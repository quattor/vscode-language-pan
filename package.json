{
    "name": "pan-language",
    "displayName": "Pan Configuration language",
    "description": "Configuration Language for Quattor deployment tool",
    "icon": "pan.png",
    "version": "0.5.1",
    "publisher": "quattor",
    "repository": {"url": "https://github.com/quattor/vscode-language-pan"},
    "engines": {
        "vscode": "*"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "pan",
                "extensions": [
                    ".pan",
                    ".tpl"
                ],
                "aliases": [
                    "Pan",
                    "pan"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "pan",
                "scopeName": "source.pan",
                "path": "./syntaxes/pan.tmLanguage.json"
            }
        ]
    }
}
